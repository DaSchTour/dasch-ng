{
  "name": "gravatar",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/gravatar/src",
  "prefix": "dasch-ng",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/gravatar/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/gravatar/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/gravatar/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/gravatar/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "dist/libs/gravatar"
      },
      "dependsOn": ["build"]
    },
    "github": {
      "executor": "@jscutlery/semver:github"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": ["gravatar:publish", "gravatar:github"]
      }
    }
  }
}
