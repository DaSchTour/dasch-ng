{
  "name": "ng-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ng/utils/src",
  "prefix": "dasch-ng",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ng/utils/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ng/utils/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ng/utils/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ng/utils/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        },
        "update": {
          "updateSnapshot": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ng/utils/**/*.ts", "libs/ng/utils/**/*.html"]
      }
    }
  },
  "publish": {
    "executor": "ngx-deploy-npm:deploy",
    "options": {
      "access": "public"
    }
  },
  "github": {
    "executor": "@jscutlery/semver:github",
    "options": {
      "tag": "${tag}",
      "notes": "${notes}"
    }
  },
  "version": {
    "executor": "@jscutlery/semver:version",
    "options": {
      "preset": "conventional",
      "push": true,
      "tagPrefix": "${projectName}/",
      "postTargets": [
        "ng-utils:publish",
        "ng-utils:github"
      ]
    }
  }
}
